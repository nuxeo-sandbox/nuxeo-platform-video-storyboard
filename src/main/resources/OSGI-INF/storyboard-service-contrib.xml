<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.video.storyboard.service" version="1.0">

  <documentation>
    A service that extracts a storyboard from a video
  </documentation>

  <implementation class="org.nuxeo.ecm.platform.video.storyboard.service.StoryboardServiceImpl" />

  <service>
    <provide interface="org.nuxeo.ecm.platform.video.storyboard.service.StoryboardService" />
  </service>

  <extension-point name="configuration">
    <documentation>Configure the Storybard Service</documentation>
    <object class="org.nuxeo.ecm.platform.video.storyboard.service.StoryboardDescriptor" />
  </extension-point>

  <extension target="org.nuxeo.ecm.platform.video.storyboard.service" point="configuration">
    <configuration>
      <defaultListenerChainName>javascript.StoryboardListenerChain</defaultListenerChainName>
    </configuration>
  </extension>

</component>
