<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.video.storyboard.service.listener" version="1.0">

  <documentation>
    A service that expose configuration for the default storyboard listener
  </documentation>

  <implementation class="org.nuxeo.ecm.platform.video.storyboard.listener.StoryboardListenerServiceImpl" />

  <service>
    <provide interface="org.nuxeo.ecm.platform.video.storyboard.listener.StoryboardListenerService" />
  </service>

  <extension-point name="configuration">
    <documentation>Configure the Storybard Service</documentation>
    <object class="org.nuxeo.ecm.platform.video.storyboard.listener.ConfigurationDescriptor" />
  </extension-point>

  <extension target="org.nuxeo.ecm.platform.video.storyboard.service.listener" point="configuration">
    <configuration>
      <defaultListenerChainName>javascript.StoryboardListenerChain</defaultListenerChainName>
    </configuration>
  </extension>

</component>
